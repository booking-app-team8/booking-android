<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normalno stanje -->
    <item android:drawable="@android:color/transparent" tools:ignore="StateListReachable" />

    <!-- Stanje kada je fokusiran (hover efekat) -->
    <item android:drawable="@color/login_button" android:state_pressed="true" />
    <item android:drawable="@color/login_button" android:state_focused="true" />
    <item android:drawable="@color/login_button" android:state_hovered="true" />
</selector>