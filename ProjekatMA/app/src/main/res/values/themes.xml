<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookingApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/red</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.BookingAppTeam8" parent="Base.Theme.BookingApp" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomSpinnerTheme" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/black</item> <!-- Text color inside Spinner -->
        <item name="android:popupBackground">@color/white</item> <!-- Dropdown background color -->
    </style>
</resources>