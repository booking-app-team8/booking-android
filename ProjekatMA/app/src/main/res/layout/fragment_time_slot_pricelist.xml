<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".fragments.accommodations.TimeSlotPricelistFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Time Slots"
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <EditText
        android:id="@+id/startDateInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Date (dd.mm.yyyy)"
        android:inputType="date" />

    <EditText
        android:id="@+id/endDateInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Date (dd.mm.yyyy)"
        android:inputType="date" />

    <Button
        android:id="@+id/addTimeSlotButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Time Slot" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Time Slots"
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/timeSlotsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Define Price for Sub-intervals"
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <EditText
        android:id="@+id/priceStartDateInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sub-interval Start Date (dd.mm.yyyy)"
        android:inputType="date" />

    <EditText
        android:id="@+id/priceEndDateInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sub-interval End Date (dd.mm.yyyy)"
        android:inputType="date" />

    <EditText
        android:id="@+id/priceInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/addPriceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Price Interval" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Defined Price Intervals"
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/priceIntervalsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
