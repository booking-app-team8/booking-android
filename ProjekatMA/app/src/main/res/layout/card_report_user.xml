<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="?android:attr/colorBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Part: Reported User Details and Block Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Left Part: Reported User Information -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_reported_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reported user: John Doe"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_report_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report from: Jane Smith"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_accommodation_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accommodation: Sea View Apartment"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_accommodation_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adress: 123 Ocean Avenue"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Right Part: Block Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_block_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Block"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/colorRed"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom Part: Reason -->
        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Reason: User violated house rules by causing property damage."
            android:textSize="14sp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
